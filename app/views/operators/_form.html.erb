<%= render("shared/errors", obj: @operator) %>
<%= form_for(operator, :html => {class: "", role: "form"}) do |f| %>

    <div class="form-group">
      <label for="company_email">Company Username</label>
      <div>
        <%= f.text_field :company_email, class: "form-control", placeholder: "left part of your company email" %>
      </div>
    </div>

    <div class="form-group">
      <label for="first_name">First Name</label>
      <div>
        <%= f.text_field :first_name, class: "form-control", placeholder: "John" %>
      </div>
    </div>

    <div class="form-group">
      <label for="last_name">Last Name</label>
      <div>
        <%= f.text_field :last_name, class: "form-control", placeholder: "Doe" %>
      </div>
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <div>
        <%= f.password_field :password, class: "form-control", placeholder: "Picked By Driver" %>
      </div>
    </div>


    <%= f.submit class: "btn btn-primary button-float" %>

<% end %>

