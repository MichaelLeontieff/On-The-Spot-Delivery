<%= render("shared/errors", obj: @customer) %>
<%= form_for(customer, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <label for="username" class="col-sm-4 control-label">Username</label>
      <div class="col-sm-6">
        <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
      </div>
    </div>

    <div class="form-group">
      <label for="username" class="col-sm-4 control-label">First Name</label>
      <div class="col-sm-6">
        <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
      </div>
    </div>

    <div class="form-group">
      <label for="username" class="col-sm-4 control-label">Last Name</label>
      <div class="col-sm-6">
        <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
      </div>
    </div>

    <div class="form-group">
      <label for="card_no" class="col-sm-4 control-label">Card Number</label>
      <div class="col-sm-6">
        <%= f.text_field :card_no, class: "form-control", placeholder: "Card Number" %>
      </div>
    </div>

    <div class="row" id="offset">
      <div class="col-sm-6">
        <div class="radio-inline">
          <label>
            <%= f.radio_button(:card_type, "Visa", class: "") %>
            <%= label_tag(:card_type, "Visa", class: "radiobutton") %>
          </label>
        </div>
        <div class="radio-inline">
          <label>
            <%= f.radio_button(:card_type, "Mastercard", class: "") %>
            <%= label_tag(:card_type, "Mastercard", class: "radiobutton") %>
          </label>
        </div>
      </div>

    </div>



    <div class="form-group">
      <label for="ccv" class="col-sm-4 control-label">CCV</label>
      <div class="col-sm-6">
        <%= f.text_field :ccv, class: "form-control", placeholder: "CCV" %>
      </div>
    </div>

    <div class="form-group">
      <label for="card_no" class="col-sm-4 control-label">Card Expiry Date</label>
      <div class="col-sm-6">
        <%= f.text_field :card_expiry, class: "form-control", placeholder: "Card Expiry Date" %>
      </div>
    </div>

    <div class="form-group">
      <label for="card_no" class="col-sm-4 control-label">Street</label>
      <div class="col-sm-6">
        <%= f.text_field :street, class: "form-control", placeholder: "Street" %>
      </div>
    </div>

    <div class="form-group">
      <label for="card_no" class="col-sm-4 control-label">Suburb</label>
      <div class="col-sm-6">
        <%= f.text_field :suburb, class: "form-control", placeholder: "Suburb" %>
      </div>
    </div>

    <div class="form-group">
      <label for="card_no" class="col-sm-4 control-label">Post Code</label>
      <div class="col-sm-6">
        <%= f.text_field :postcode, class: "form-control", placeholder: "Post Code" %>
      </div>
    </div>

    <div class="form-group">
      <label for="card_no" class="col-sm-4 control-label">City</label>
      <div class="col-sm-6">
        <%= f.text_field :city, class: "form-control", placeholder: "City" %>
      </div>
    </div>


    <div class="form-group">
      <label for="card_no" class="col-sm-4 control-label">Email Address</label>
      <div class="col-sm-6">
        <%= f.text_field :email, class: "form-control", placeholder: "Email Address" %>
      </div>
    </div>

    <%= f.submit class: "btn btn-primary button-float" %>

<% end %>
